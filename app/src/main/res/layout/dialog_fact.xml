<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"



    >

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/dialog_fact_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Example text"
            android:textColor="@color/pale_grey"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_fact_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="wow text is here"
            android:textColor="@color/pale_grey"
            android:textSize="16sp" />

        <Button
            android:id="@+id/dialog_btn_add_to_fav"

            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/dialog_add_black_24dp"
            android:drawablePadding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="@string/add_to_favorite_button" />

        <Button
            android:id="@+id/dialog_btn_remove_from_fav"

            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/dialog_remove_black_24dp"
            android:drawablePadding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:text="@string/remove_from_favorite_button"     />
            <!--Тут можно реализовать функцию "поделиться " с интент фильтром-->



<!--Найти способ обрезки по радиусу картинок-->
    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_iv_fact_image"

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_pets_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        />

</RelativeLayout>